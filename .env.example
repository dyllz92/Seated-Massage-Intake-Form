# Example environment variables for Seated Massage Intake Form
# Copy this file to `.env` for local development (DO NOT commit real secrets)

# Google service account JSON (single-line or escaped newlines)
# Example format: {"type":"service_account",...,"private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n",...}
GOOGLE_SERVICE_ACCOUNT_KEY=

# Or, for local development, point to a credentials file path
# GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./google-credentials.json

# Google Drive folder ID where PDFs will be uploaded
GOOGLE_DRIVE_FOLDER_ID=

# Allow saving PDFs locally if Drive upload fails (true|false)
ALLOW_LOCAL_PDF_FALLBACK=false

# Server port (Railway injects PORT automatically)
# PORT=3000
# Server Configuration
PORT=3001

# Google Drive Configuration
# Option 1: JSON content as environment variable (recommended for cloud deployment like Azure)
# Paste the entire contents of your google-credentials.json file as a single line
# GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}
#
# Option 2: Path to credentials file (for local development)
# GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./google-credentials.json

GOOGLE_DRIVE_FOLDER_ID=your-folder-id-here

# Storage Policy
# Set to true to allow saving PDFs locally when Google Drive is not configured.
# Defaults to false for privacy: no local persistence after upload.
ALLOW_LOCAL_PDF_FALLBACK=false

# App Configuration
APP_NAME=Flexion & Flow
